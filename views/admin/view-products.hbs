<section>
    <div class="container">
        <div class="row mt-5">
            <a href="/admin/addproducts"  class="btn btn-success ml-auto">Add product</a>
        </div>
        <table class="table">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">category</th>
      <th scope="col">price</th>
     <th >image</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
       <td>{{this.Name}}</td>
      <td>{{this.Company}}</td>
      <td>{{this.Price}}</td>
      <td><img style="width: 50px;height:50px" src="/product-images/{{this._id}}.jpg" alt="" class=""></td>
       <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a></td>
      <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete?{{this.name}}')">Delete</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>